{
    "name": "codestop/js-proof",
    "description": "CodeStop Proof Library for JS Course",
    "type": "library",
    "authors": [
        {
            "name": "Jerome Suarez",
            "email": "jerome.suarez@codingavenue.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "CodeStop\\Proof\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../codestop-release/sandbox/client-libraries/php-client",
            "options": {
                "symlink": false
            }
        }
    ],
    "require": {
        "symfony/console": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.6",
        "codestop/sandbox-client": "dev-master"
    },  
    "bin": ["src/bin/proof-runner"]
}
